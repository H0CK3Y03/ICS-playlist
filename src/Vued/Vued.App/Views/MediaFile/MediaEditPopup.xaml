<?xml version="1.0" encoding="utf-8" ?>
<ct:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
    x:Class="Vued.App.Views.MediaFile.MediaEditPopup"
    Size="700,550"
    Color="{StaticResource ColorBackgroundSecondary}">

    <Grid
        Padding="15"
        RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
        ColumnDefinitions="*,*,*"
        ColumnSpacing="10"
        RowSpacing="4">
        <!-- Row 0, Column 0: Name -->
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Text="Name"
            FontSize="14"
            FontFamily="RajdhaniBold"
            TextColor="{StaticResource ColorAccent}"
            VerticalOptions="Center"
            HorizontalOptions="Start" />
        <Entry
            Grid.Row="1"
            Grid.Column="0"
            Text="{Binding Name}"
            FontSize="14"
            FontFamily="RajdhaniRegular"
            TextColor="{StaticResource ColorTextPrimary}"
            BackgroundColor="{StaticResource ColorInputBackground}"
            VerticalOptions="Center"
            HorizontalOptions="Fill"
            HeightRequest="32" />

        <!-- Row 0, Column 1: Director -->
        <Label
            Grid.Row="0"
            Grid.Column="1"
            Text="Director"
            FontSize="14"
            FontFamily="RajdhaniBold"
            TextColor="{StaticResource ColorAccent}"
            VerticalOptions="Center"
            HorizontalOptions="Start" />
        <Entry
            Grid.Row="1"
            Grid.Column="1"
            Text="{Binding Director}"
            FontSize="14"
            FontFamily="RajdhaniRegular"
            TextColor="{StaticResource ColorTextPrimary}"
            BackgroundColor="{StaticResource ColorInputBackground}"
            VerticalOptions="Center"
            HorizontalOptions="Fill"
            HeightRequest="32" />

        <!-- Row 0, Column 2: Length/Episodes -->
        <Label
            Grid.Row="0"
            Grid.Column="2"
            Text="Length/Episodes"
            FontSize="14"
            FontFamily="RajdhaniBold"
            TextColor="{StaticResource ColorAccent}"
            VerticalOptions="Center"
            HorizontalOptions="Start" />
        <Entry
            Grid.Row="1"
            Grid.Column="2"
            Text="{Binding LengthOrEpisodes}"
            FontSize="14"
            FontFamily="RajdhaniRegular"
            TextColor="{StaticResource ColorTextPrimary}"
            BackgroundColor="{StaticResource ColorInputBackground}"
            VerticalOptions="Center"
            HorizontalOptions="Fill"
            HeightRequest="32" />

        <!-- Row 2, Column 0: Rating -->
        <Label
            Grid.Row="2"
            Grid.Column="0"
            Text="Rating"
            FontSize="14"
            FontFamily="RajdhaniBold"
            TextColor="{StaticResource ColorAccent}"
            VerticalOptions="Center"
            HorizontalOptions="Start" />
        <Picker
            Grid.Row="3"
            Grid.Column="0"
            ItemsSource="{Binding Ratings}"
            SelectedItem="{Binding Rating}"
            FontSize="14"
            FontFamily="RajdhaniRegular"
            TextColor="{StaticResource ColorTextPrimary}"
            BackgroundColor="{StaticResource ColorInputBackground}"
            VerticalOptions="Center"
            HorizontalOptions="Fill"
            HeightRequest="32" />

        <!-- Row 2, Column 1: Change Picture URL -->
        <Label
            Grid.Row="2"
            Grid.Column="1"
            Text="Change Picture URL"
            FontSize="14"
            FontFamily="RajdhaniBold"
            TextColor="{StaticResource ColorAccent}"
            VerticalOptions="Center"
            HorizontalOptions="Start" />
        <Entry
            Grid.Row="3"
            Grid.Column="1"
            Text="{Binding ImageURL}"
            FontSize="14"
            FontFamily="RajdhaniRegular"
            TextColor="{StaticResource ColorTextPrimary}"
            BackgroundColor="{StaticResource ColorInputBackground}"
            VerticalOptions="Center"
            HorizontalOptions="Fill"
            HeightRequest="32" />

        <!-- Row 2, Column 2: Genres (spanning rows 2-4) -->
        <Label
            Grid.Row="2"
            Grid.Column="2"
            Text="Genres"
            FontSize="14"
            FontFamily="RajdhaniBold"
            TextColor="{StaticResource ColorAccent}"
            VerticalOptions="Center"
            HorizontalOptions="Start" />
        <ScrollView
            Grid.Row="3"
            Grid.Column="2"
            Grid.RowSpan="4"
            HeightRequest="120">
            <CollectionView
                ItemsSource="{Binding AvailableGenres}"
                SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Padding="10"
                            Margin="6"
                            BackgroundColor="{StaticResource ColorInputBackground}"
                            CornerRadius="4"
                            HasShadow="False"
                            HeightRequest="45">
                            <HorizontalStackLayout
                                Spacing="5"
                                VerticalOptions="Center">
                                <CheckBox
                                    IsChecked="{Binding IsSelected}"
                                    Color="{StaticResource ColorAccent}"
                                    VerticalOptions="Center" />
                                <Label
                                    Text="{Binding Name}"
                                    FontSize="12"
                                    FontFamily="RajdhaniRegular"
                                    TextColor="{StaticResource ColorTextPrimary}"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <!-- Row 5, Column 0: Release Year -->
        <Label
            Grid.Row="5"
            Grid.Column="0"
            Text="Release Year"
            FontSize="14"
            FontFamily="RajdhaniBold"
            TextColor="{StaticResource ColorAccent}"
            VerticalOptions="Center"
            HorizontalOptions="Start" />
        <Entry
            Grid.Row="6"
            Grid.Column="0"
            Text="{Binding ReleaseYear}"
            Keyboard="Numeric"
            FontSize="14"
            FontFamily="RajdhaniRegular"
            TextColor="{StaticResource ColorTextPrimary}"
            BackgroundColor="{StaticResource ColorInputBackground}"
            VerticalOptions="Center"
            HorizontalOptions="Fill"
            HeightRequest="32" />

        <!-- Row 5, Column 1: Change Media URL -->
        <Label
            Grid.Row="5"
            Grid.Column="1"
            Text="Change Media URL"
            FontSize="14"
            FontFamily="RajdhaniBold"
            TextColor="{StaticResource ColorAccent}"
            VerticalOptions="Center"
            HorizontalOptions="Start" />
        <Entry
            Grid.Row="6"
            Grid.Column="1"
            Text="{Binding URL}"
            FontSize="14"
            FontFamily="RajdhaniRegular"
            TextColor="{StaticResource ColorTextPrimary}"
            BackgroundColor="{StaticResource ColorInputBackground}"
            VerticalOptions="Center"
            HorizontalOptions="Fill"
            HeightRequest="32" />

        <!-- Row 7, Columns 0-2: Description and Review -->
        <VerticalStackLayout
            Grid.Row="7"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Spacing="8"
            Margin="0,8,0,0">
            <Label
                Text="Description"
                FontSize="14"
                FontFamily="RajdhaniBold"
                TextColor="{StaticResource ColorAccent}"
                VerticalOptions="Start" />
            <Editor
                Text="{Binding Description}"
                FontSize="14"
                FontFamily="RajdhaniRegular"
                TextColor="{StaticResource ColorTextPrimary}"
                BackgroundColor="{StaticResource ColorInputBackground}"
                HeightRequest="80"
                VerticalOptions="Start"
                HorizontalOptions="Fill" />

            <Label
                Text="Review"
                FontSize="14"
                FontFamily="RajdhaniBold"
                TextColor="{StaticResource ColorAccent}"
                VerticalOptions="Start" />
            <Editor
                Text="{Binding Review}"
                FontSize="14"
                FontFamily="RajdhaniRegular"
                TextColor="{StaticResource ColorTextPrimary}"
                BackgroundColor="{StaticResource ColorInputBackground}"
                HeightRequest="80"
                VerticalOptions="Start"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>

        <!-- Row 8, Columns 0-2: Buttons -->
        <HorizontalStackLayout
            Grid.Row="8"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Spacing="10"
            HorizontalOptions="End"
            Margin="0,15,0,5">
            <Button
                Text="Cancel"
                Clicked="OnCancelClicked"
                BackgroundColor="{StaticResource ColorButtonSecondary}"
                TextColor="{StaticResource ColorButtonSecondaryText}"
                HeightRequest="36"
                WidthRequest="90"
                CornerRadius="4"
                FontSize="14" />
            <Button
                Text="Delete"
                Clicked="OnCancelClicked"
                Command="{Binding DeleteCommand}"
                BackgroundColor="{StaticResource ColorError}"
                TextColor="{StaticResource ColorButtonSecondaryText}"
                HeightRequest="36"
                WidthRequest="90"
                CornerRadius="4"
                FontSize="14" />
            <Button
                Text="Apply"
                Clicked="OnCancelClicked"
                Command="{Binding EditCommand}"
                BackgroundColor="{StaticResource ColorButtonPrimary}"
                TextColor="{StaticResource ColorButtonPrimaryText}"
                HeightRequest="36"
                WidthRequest="90"
                CornerRadius="4"
                FontSize="14" />
        </HorizontalStackLayout>
    </Grid>
</ct:Popup>
