<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Vued.App.Views.MediaFile.MediaThumbnail"
    HeightRequest="210"
    WidthRequest="140">

    <VerticalStackLayout
        Spacing="8"
        Margin="4">
        <!-- Image in a rounded Frame -->
        <Frame
            BackgroundColor="{StaticResource ColorBackgroundPrimary}"
            CornerRadius="8"
            Padding="0"
            HasShadow="True"
            HeightRequest="160">
            <Image
                Source="{Binding ImageUrl, FallbackValue='placeholder.png'}"
                Aspect="AspectFill"
                HeightRequest="160" />
        </Frame>
        <!-- Series Name -->
        <Label
            Text="{Binding Name}"
            FontSize="14"
            FontFamily="RajdhaniRegular"
            Padding="0,8,0,0"
            TextColor="{StaticResource ColorTextPrimary}"
            HorizontalOptions="Center"
            LineBreakMode="WordWrap"
            MaxLines="2" />
    </VerticalStackLayout>
</ContentView>